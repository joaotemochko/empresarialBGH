<p style="color: green"><%= notice %></p>

<h1>Estoques</h1>

<div id="estoques">
  <table class="table table-striped table-bordered table-responsive-lg table-hover">
    <thead>
    <tr>
      <th>Produto</th>
      <th>Fornecedor</th>
      <th>Descrição</th>
      <th>Lote</th>
      <th>Comprado em</th>
      <th>Validade</th>
      <th>Quantidade</th>
      <th>Valor</th>
      <th>Status</th>
      <th></th>
    </tr>
    </thead>
  <% @estoques.each do |estoque| %>
      <tbody>
      <tr>
        <%= render estoque %>
        <td><%= button_to "Mostrar", estoque, class: 'btn btn-outline-info', method: :get %></td>
      </tr>
      </tbody>
  <% end %>
  </table>
</div>

<%= button_to "Novo estoque", new_estoque_path, class: 'btn btn-outline-success', method: :get %>
