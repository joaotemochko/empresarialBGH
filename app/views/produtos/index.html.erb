<p style="color: green"><%= notice %></p>

<h1>Produtos</h1>

<div class="table-responsive">
  <%= form_tag search_produto_path, method: :get do %>
    <div class="input-group">
      <%= search_field_tag :search, params[:search], placeholder: "Nome", class: 'form-control' %>
      <div class="input-group-btn">
        <%= button_tag 'Pesquisar', class: 'btn btn-primary', :nome => nil %>
      </div>
    </div>
  <% end %>
<table class="text-center table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th>Produto</th>
    <th>Descrição</th>
    <th>Entrada</th>
    <th>Quantidade Disponível</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

      <tbody>
      <tr>
      <% @produtos.each do |produto| %>
          <%= render produto %>

          <td>
            <%= button_to "Editar", edit_produto_path(produto), class: 'btn btn-outline-info', method: :get%>
          </td>
        <td id="mostrar">
          <%= button_to "Mostrar", produto, class: 'btn btn-outline-dark', method: :get %>
        </td>
          </tr>
        </tbody>
      <% end %>
</table>

<%= button_to "Novo produto", new_produto_path, class: 'btn btn-outline-success', method: :get %>
</div>