<h1>Editar usuário</h1>

<div>
  <%= form_with(model: @user, local: true) do |form| %>
    <div>
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <div>
      <%= form.label 'Senha' %>
      <%= form.text_field :password %>
    </div>

    <div>
      <%= form.label 'Confirmar senha' %>
      <%= form.text_field :password_confirmation %>
    </div>
      <%= form.label 'Usuário Administrador?' %>
    <%= form.select("admin", [['Sim', true], ['Não', false]], {include_blank: 'Selecione...'}) %>
    <div>

    </div>
    <div>
      <%= form.submit class: 'btn btn-outline-success' %>
    </div>
  <% end %>
</div>